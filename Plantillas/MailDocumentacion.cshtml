<!--    CUERPO DEL CORREO    -->

@if (Model.Estado == "Validado")
{
    <p class="lead" style="font-family:'Helvetica Neue',Helvetica,Helvetica,Arial,sans-serif;font-size:17px;font-weight:400;line-height:1.6;margin:0;margin-bottom:10px;padding:0;color:black"> @Raw(Model.MailCuerpo)</p>
}
@if (Model.Estado == "Volver Etapa")
{
    <p class="lead" style="font-family:'Helvetica Neue',Helvetica,Helvetica,Arial,sans-serif;font-size:17px;font-weight:400;line-height:1.6;margin:0;margin-bottom:10px;padding:0;color:black"> @Raw(Model.MailCuerpo)</p>
    foreach (var item in Model.Errores)
    {
        <p class="lead" style="font-family:'Helvetica Neue',Helvetica,Helvetica,Arial,sans-serif;font-size:17px;font-weight:400;line-height:1.6;margin:0;margin-bottom:10px;padding:0;color:black">&bull; @item.DataVerificacion: @item.Comentario </p>
    }
    <p style="text-align:center;">
        <a href="@Model.url" style="background: #0078D4;border: 1px solid #FFF;color: #FFF;font-family: sans-serif;font-size: 15px;line-height: 1; text-align: center;text-decoration: none; width:480px;height:170px ; padding:15px;">
            Ver Documentación
        </a>
    </p>
}
@if (Model.Estado == "No Validado")
{
    <p class="lead" style="font-family:'Helvetica Neue',Helvetica,Helvetica,Arial,sans-serif;font-size:17px;font-weight:400;line-height:1.6;margin:0;margin-bottom:10px;padding:0;color:black"> @Raw(Model.MailCuerpo)</p>
}
