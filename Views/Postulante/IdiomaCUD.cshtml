@model SINU.ViewModels.IdiomasVM



@using (Ajax.BeginForm("IdiomaCUD", "Postulante", null,
new AjaxOptions
{
    HttpMethod = "POST",
    OnSuccess = "Exito(data,status,xhr)",
    OnFailure = "Falla",
//LoadingElementId = "carga",
//LoadingElementDuration = 1000,
//UpdateTargetId = "resultTarget"
},
new { id = "BeginFormIdiomaCUD" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">
            IDIOMA
        </h5>
        
    </div>
    <div class="modal-body ui-front" style="overflow:auto;">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">

                <div class="form-group row ">

                    <div class="col col-md-12"  >

                        @Html.HiddenFor(model => model.VPersona_IdiomaIdVM.IdPersona)
                        @Html.HiddenFor(model => model.VPersona_IdiomaIdVM.IdPersonaIdioma)

                        <div class="form-group">
                            @Html.LabelFor(model => model.VPersona_IdiomaIdVM.CodIdioma, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.VPersona_IdiomaIdVM.CodIdioma, new SelectList(Model.Sp_VIdiomas_VM, "CODIGO", "DESCRIPCION"), "Seleccione un Idioma", htmlAttributes: new { @class = "form-control combobox", @id = "ComboIdioma" })
                                <div class="h-100"></div>
                                @Html.ValidationMessageFor(model => model.VPersona_IdiomaIdVM.CodIdioma, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group ">
                            @Html.LabelFor(model => model.VPersona_IdiomaIdVM.Habla, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.VPersona_IdiomaIdVM.Habla, new SelectList(Model.NivelIdiomaVM, "IdNivelIdioma", "Nivel"), "Seleccione un Nivel", htmlAttributes: new { @class = "form-control selectpicker" })
                                <div class="h-100"></div>
                                @Html.ValidationMessageFor(model => model.VPersona_IdiomaIdVM.Habla, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group ">
                            @Html.LabelFor(model => model.VPersona_IdiomaIdVM.Escribe, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.VPersona_IdiomaIdVM.Escribe, new SelectList(Model.NivelIdiomaVM, "IdNivelIdioma", "Nivel"), "Seleccione un Nivel", htmlAttributes: new { @class = "form-control selectpicker" })
                                <div class="h-100"></div>
                                @Html.ValidationMessageFor(model => model.VPersona_IdiomaIdVM.Escribe, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.VPersona_IdiomaIdVM.Lee, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.VPersona_IdiomaIdVM.Lee, new SelectList(Model.NivelIdiomaVM, "IdNivelIdioma", "Nivel"), "Seleccione un Nivel", htmlAttributes: new { @class = "form-control selectpicker " })
                                <div class="h-100"></div>
                                @Html.ValidationMessageFor(model => model.VPersona_IdiomaIdVM.Lee, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>
                </div>

            </div>
            
        </div>
    </div>
    <div class="modal-footer ">
        <div class="float-md-right">
            <div class="BTMuestraTable d-inline"> 
                <button type="button" class="btn btn-info " data-dismiss="modal">Cerrar</button> 
            </div>
            
            <div class="BTAcciones d-inline">
                <input type="button" value="Guardar" class="btn btn-primary Guardar_REG" data-form="BeginFormIdiomaCUD" />
            </div>
        </div>
    </div>
}


