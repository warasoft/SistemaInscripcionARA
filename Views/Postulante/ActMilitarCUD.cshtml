@model SINU.ViewModels.ActividadMIlitarVM



@using (Ajax.BeginForm("ActMilitarCUD", "Postulante", null,
new AjaxOptions
{
    HttpMethod = "POST",
    OnSuccess = "Exito(data,status,xhr)",
    OnFailure = "Falla",
//LoadingElementId = "ModalEIA",
//LoadingElementDuration = 1000,
//UpdateTargetId = "resultTarget"
},
new { id = "BeginFormActMilitarCUD" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">
            ACTIVIDAD MILITAR
        </h5>
      
    </div>

    <div class="modal-body ui-front" style="overflow:auto;">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">

                <div class="form-group row">

                    @Html.HiddenFor(model => model.IDPErsona)
                    @Html.HiddenFor(model => model.ACTMilitarIDVM.IdActividadMilitar)


                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.ACTMilitarIDVM.Fuerza, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.DropDownListFor(model => model.ACTMilitarIDVM.IdFuerza, new SelectList(Model.FuerzasVM, "IdFuerza", "Fuerza1"), "Seleccione una FUERZA", htmlAttributes: new { @class = "form-control selectpicker" })
                                <div class="h-100"></div>
                                @Html.ValidationMessageFor(model => model.ACTMilitarIDVM.IdFuerza, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group ">
                            @Html.LabelFor(model => model.ACTMilitarIDVM.Ingreso, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.DropDownListFor(model => model.ACTMilitarIDVM.Ingreso, new SelectList(new[] { new { Value = "true", Text = "SI" }, new { Value = "false", Text = "NO" }, }, "Value", "Text", Model), htmlAttributes: new { @class = "form-control selectpicker", @id = "IngresoSINO" })
                                @Html.ValidationMessageFor(model => model.ACTMilitarIDVM.Ingreso, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group no">
                            @Html.LabelFor(model => model.ACTMilitarIDVM.CausaMotivoNoingreso, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.ACTMilitarIDVM.CausaMotivoNoingreso, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ACTMilitarIDVM.CausaMotivoNoingreso, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group si">
                            @Html.LabelFor(model => model.ACTMilitarIDVM.IdSituacionRevista, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.DropDownListFor(model => model.ACTMilitarIDVM.IdSituacionRevista, new SelectList(Model.SituacionRevistaVM, "IdSituacionRevista", "SituacionRevista1"), "Seleccione una Opcion", htmlAttributes: new { @class = "form-control selectpicker" })
                                <div class="h-100"></div>
                                @Html.ValidationMessageFor(model => model.ACTMilitarIDVM.IdSituacionRevista, "", new { @class = "text-danger" })
                            </div>

                        </div>
                        <div class="form-group si ">
                            @Html.LabelFor(model => model.ACTMilitarIDVM.FechaIngreso, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.ACTMilitarIDVM.FechaIngreso, "{0:dd/MM/yyyy}", new { @class = "form-control fechacumple datepicker", @readonly = true, @placeholder = "dd/mm/yyyy" })

                                @Html.ValidationMessageFor(model => model.ACTMilitarIDVM.FechaIngreso, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group baja si">
                            @Html.LabelFor(model => model.ACTMilitarIDVM.FechaBaja, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.ACTMilitarIDVM.FechaBaja, "{0:dd/MM/yyyy}", new { @class = "form-control fechacumple datepicker", @readonly = true, @placeholder = "dd/mm/yyyy" })

                                @Html.ValidationMessageFor(model => model.ACTMilitarIDVM.FechaBaja, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group baja si">
                            @Html.LabelFor(model => model.ACTMilitarIDVM.IdBaja, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.DropDownListFor(model => model.ACTMilitarIDVM.IdBaja, new SelectList(Model.BajaVM, "IdBaja", "BajaCausa"), "Seleccione Motivo de Baja", htmlAttributes: new { @class = "form-control selectpicker" })
                                <div class="h-100"></div>
                                @Html.ValidationMessageFor(model => model.ACTMilitarIDVM.IdBaja, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group baja si">
                            @Html.LabelFor(model => model.ACTMilitarIDVM.MotivoBaja, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.ACTMilitarIDVM.MotivoBaja, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ACTMilitarIDVM.MotivoBaja, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group si">
                            @Html.LabelFor(model => model.ACTMilitarIDVM.Jerarquia, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.ACTMilitarIDVM.Jerarquia, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ACTMilitarIDVM.Jerarquia, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group si">
                            @Html.LabelFor(model => model.ACTMilitarIDVM.Cargo, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.ACTMilitarIDVM.Cargo, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ACTMilitarIDVM.Cargo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group si">
                            @Html.LabelFor(model => model.ACTMilitarIDVM.Destino, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.ACTMilitarIDVM.Destino, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ACTMilitarIDVM.Destino, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="modal-footer" id="BTActMilitar">
        <div class="float-md-right">
            <div class="BTMuestraTable d-inline">
                <button type="button" class="btn btn-info " data-dismiss="modal">Cerrar</button>
            </div>

            <div class="BTAcciones d-inline">
                <input type="button" value="Guardar" class="btn btn-primary Guardar_REG" data-form="BeginFormActMilitarCUD" />
            </div>
        </div>
    </div>
}

