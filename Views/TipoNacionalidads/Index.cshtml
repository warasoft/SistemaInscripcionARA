@model IEnumerable<SINU.Models.TipoNacionalidad>

@{
    ViewBag.Title = "Nacionalidad";
}
@*@section MenuPerfil{

    @Html.Partial("_MenuPerfilAdmin")
}*@
<h2></h2>

<table class="table table-filters table-bordered table-light" id="le-filters" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th class="ni-o-ni-bu"></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.ActionLink(" ", "Edit", new { id = item.IdTipoNacionalidad }, htmlAttributes: new { @class = "fas fa-edit" }) &ensp;|&ensp;
                    @Html.ActionLink(" ", "Details", new { id = item.IdTipoNacionalidad }, htmlAttributes: new { @class = "fas fa-list" }) &ensp;|&ensp;
                    @Html.ActionLink(" ", "Delete", new { id = item.IdTipoNacionalidad }, htmlAttributes: new { @class = "fas fa-trash-alt" }) &ensp;|&ensp;
                </td>
            </tr>
        }

    </tbody>

</table>
<br />
<p>
    @Html.ActionLink(" Nueva Nacionalidad", "Create", null, new { @class = "btn btn-success btn-lg fas fa-plus font-jumb", @style = "height:auto" })
</p>

