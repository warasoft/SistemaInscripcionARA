@model SINU.ViewModels.AdministradorVm

@{
    ViewBag.Title = "Período de Inscripción";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edicion</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>PeriodosInscripciones</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.PeriodosInscripcionesVm.FechaInicio, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PeriodosInscripcionesVm.FechaInicio, new { htmlAttributes = new { @class = "form-control",@id="datepicker1",@readonly=true  } })
                @Html.ValidationMessageFor(model => model.PeriodosInscripcionesVm.FechaInicio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PeriodosInscripcionesVm.FechaFinal, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PeriodosInscripcionesVm.FechaFinal, new { htmlAttributes = new { @class = "form-control",@id="datepicker2" ,@readonly=true } })
                @Html.ValidationMessageFor(model => model.PeriodosInscripcionesVm.FechaFinal, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PeriodosInscripcionesVm.IdInstitucion, "Institución", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.PeriodosInscripcionesVm.IdInstitucion,Model.Instituciones,null,new {@class="selectpicker" })
                @Html.ValidationMessageFor(model => model.PeriodosInscripcionesVm.IdInstitucion, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(model => model.PeriodosInscripcionesVm.IdPeriodoInscripcion)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar a lista", "Index")
</div>

@section Scripts {
    <script>
        var date = new Date();
        date.setDate(date.getDate()-1);
        $('#datepicker1,#datepicker2').datepicker({
            autoclose: true,
            startDate: date,
        });
    </script>

}
