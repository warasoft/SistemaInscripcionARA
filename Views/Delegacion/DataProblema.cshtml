@model SINU.ViewModels.ProblemaEcontradoVM


@using (Ajax.BeginForm("DataProblema", "Delegacion", null,
    new AjaxOptions
    {
        HttpMethod = "POST",
        OnSuccess = "Exito(data,status,xhr)",
        OnFailure = "Falla",

    },
    new { id = "BeginFormDataProblema" }))
{
    <div class="Habilitar">
        @Html.AntiForgeryToken()
        <div class="container">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">
                    Problema Encontrado
                </h5>

            </div>
            <div class="modal-body  ui-front" style="overflow:auto;height:40rem;width:auto ">
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @*<div class="col-md-offset-2 col-md-12">*@
                        @Html.HiddenFor(m => m.vListDataProblemasVM.IdPostulantePersona)
                        @Html.HiddenFor(m=>m.vListDataProblemasVM.IdDataProblemaEncontrado)
                        @*<div class="form-group row ">*@


                        @*<hr />*@
                        <div class="form-group">
                            @Html.LabelFor(model => model.vListDataProblemasVM.Apellido_Y_Nombres, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.vListDataProblemasVM.Apellido_Y_Nombres, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                                @Html.ValidationMessageFor(model => model.vListDataProblemasVM.Apellido_Y_Nombres, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.vListDataProblemasVM.DNI, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.vListDataProblemasVM.DNI, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                                @Html.ValidationMessageFor(model => model.vListDataProblemasVM.DNI, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.vListDataProblemasVM.IdDataVerificacion, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.DropDownListFor(m => m.vListDataProblemasVM.IdDataVerificacion, (SelectList)Model.ListDataVerificacionVM, "--Seleccione Instituto a Incribirse--", htmlAttributes: new { @class = "form-control combobox " })
                                <div class="h-100"></div>
                                @Html.ValidationMessageFor(model => model.vListDataProblemasVM.IdDataVerificacion, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        @*<br />*@
                        <hr />
                        <h5>
                            Texto del problema Encontrado:
                            <br /> @ViewBag.Texto
                        </h5>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.vListDataProblemasVM.Comentario, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.vListDataProblemasVM.Comentario, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.vListDataProblemasVM.Comentario, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                       
                    </div>


                    <div class="modal-footer  class=" id="BTEstudios">
                        <div class="float-md-right">
                            <div class="BTMuestraTable d-inline">
                                <button type="button" class="btn btn-info " data-dismiss="modal">Cerrar</button>
                            </div>

                            <div class="d-inline">
                                <input type="button" value="Guardar" class="btn btn-primary Guardar_REG" data-form="BeginFormDataProblema" />
                            </div>
                        </div>
                    </div>

                   

                </div>
            </div>



        </div>
    </div>
}
