@model IEnumerable<SINU.Models.ResGrupo>

@{
    ViewBag.Title = "Restricciones de Grupo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Restricciones de Grupo</h2>


    <table class="table table-filters table-bordered table-light" id="le-filters" style="width:100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Edad_Al_AnioSig)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Edad_Al_Dia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Edad_Al_Mes)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EdadMinCAutoriz)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EdadMin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EdadMax)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdEstadoCivil)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Edad_a_fecha)
                </th>
                <th></th>
            </tr>
</thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Edad_Al_AnioSig)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Edad_Al_Dia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Edad_Al_Mes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EdadMinCAutoriz)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EdadMin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EdadMax)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdEstadoCivil)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Edad_a_fecha)
                </td>
                <td class="justify-content-center align-items-center d-md-flex">
                    @Html.ActionLink("  ", "Edit", new { id = item.IdResGrupo }, htmlAttributes: new { @class = "fas fa-edit" })&ensp;|&ensp;
                    @Html.ActionLink("  ", "Details", new { id = item.IdResGrupo }, htmlAttributes: new { @class = "fas fa-list" })&ensp;|&ensp;
                    @Html.ActionLink("  ", "Delete", new { id = item.IdResGrupo }, htmlAttributes: new { @class = "fas fa-trash-alt" })
                </td>
            </tr>
            }
        </tbody>
    </table>
<p>
    @Html.ActionLink(" Nuevo Registro", "Create", "1", new { @class = "btn btn-success btn-lg fas fa-plus font-jumb", @style = "height:auto" })
</p>

